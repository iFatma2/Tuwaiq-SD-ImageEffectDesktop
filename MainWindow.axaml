<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ImageEffectDesktop.MainWindow"
        Width="900" Height="600"
        Title="Image Effects Desktop">

    <DockPanel LastChildFill="True" Margin="10">

        <!-- Toolbar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button x:Name="UploadButton" Content="Upload Image" Click="OnUploadButtonClick"/>
        </StackPanel>

        <!-- Main Section -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Manual Effects -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <TextBlock Text="Manual Effects" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                <Border BorderBrush="Gray" BorderThickness="1" Width="400" Height="400">
                    <Image x:Name="ManualImage" Stretch="Uniform"/>
                </Border>
                <Button x:Name="ManualButton" Content="Apply Grayscale" Click="OnManualButtonClick" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Auto Effects -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <TextBlock Text="Auto Effects" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                <Border BorderBrush="Gray" BorderThickness="1" Width="400" Height="400">
                    <Image x:Name="AutoImage" Stretch="Uniform"/>
                </Border>
                <Button x:Name="AutoButton" Content="Start Auto Effects" Click="OnAutoButtonClick" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
