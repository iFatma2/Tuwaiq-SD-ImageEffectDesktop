<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ImageEffectDesktop.MainWindow"
        Width="900" Height="600"
        Title="Image Effects Desktop">

    <!-- ===== Background ===== -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF2B2E34" Offset="0"/>
            <GradientStop Color="#FF1C1F24" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <!-- ===== Global Styles ===== -->
    <Window.Styles>
        <Style Selector="Button.accent">
            <Setter Property="Background" Value="#FF4FC3F7"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style Selector="TextBlock.section-title">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFECECEC"/>
        </Style>
    </Window.Styles>

    <Border Padding="16,80,16,16">

        <DockPanel LastChildFill="True">

            <!-- ===== Top Toolbar ===== -->
            <StackPanel DockPanel.Dock="Top"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,30">

                <Button x:Name="UploadButton"
                        Classes="accent"
                        Content="Upload Image ðŸ“¤"
                        Click="OnUploadButtonClick"/>
            </StackPanel>

            <!-- ===== Main Content ===== -->
            <Grid ColumnSpacing="24">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- ===== Manual Effects ===== -->
                <StackPanel Grid.Column="0"
                            HorizontalAlignment="Center"
                            Spacing="12">

                    <TextBlock Text="Manual Effects"
                               Classes="section-title"
                               HorizontalAlignment="Center"/>

                    <Border Width="400"
                            Height="400"
                            CornerRadius="12"
                            Background="#FF2A2E35"
                            BorderBrush="#FF3C4048"
                            BorderThickness="1"
                            Padding="8">

                        <Image x:Name="ManualImage"
                               Stretch="Uniform"/>
                    </Border>

                    <Button x:Name="ManualButton"
                            Classes="accent"
                            Content="Step Manual Effects"
                            Click="OnManualButtonClick"
                            HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- ===== Auto Effects ===== -->
                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Center"
                            Spacing="12">

                    <TextBlock Text="Auto Effects"
                               Classes="section-title"
                               HorizontalAlignment="Center"/>

                    <Border Width="400"
                            Height="400"
                            CornerRadius="12"
                            Background="#FF2A2E35"
                            BorderBrush="#FF3C4048"
                            BorderThickness="1"
                            Padding="8">

                        <Image x:Name="AutoImage"
                               Stretch="Uniform"/>
                    </Border>

                    <Button x:Name="AutoButton"
                            Classes="accent"
                            Content="Start Auto Effects"
                            Click="OnAutoButtonClick"
                            HorizontalAlignment="Center"/>
                </StackPanel>

            </Grid>

        </DockPanel>
    </Border>

</Window>
